{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["es2017"],
        "listEmittedFiles": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "outDir": "dist",
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2017"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "node_modules",
        "test"
    ]
}